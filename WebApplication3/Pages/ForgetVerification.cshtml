@page
@model WebApplication3.Pages.ForgetVerificationModel
@{
}
<div class="row justify-content-center">
    <div class="col-md-6 col-sm-12 p-5 bg-light rounded">

        <h2 class="text-center mb-3" style="font-family: Verdana, sans-serif; text-decoration: underline;">Forget Password OTP</h2>
        <form method="post">
            <div class="form-group">
                <label class="form-label" style="font-family: Verdana, sans-serif;">Verification Code</label>
                <input type="text" name="code" class="form-control" id="code" />
            </div>
            @if (ViewData["isEmailConfirmed"] != null)
            {
                <div class="text-danger text-center">@ViewData["isEmailConfirmed"]</div>
            }
            <br>
            <div class="text-center">
                <input type="submit" value="Verify" class="btn btn-success" style="width: 100%; border-radius: 25px; font-family: Verdana" />
            </div>
        </form>
    </div>
</div>